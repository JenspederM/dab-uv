# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

##############################################################
# Core EditorConfig Options                                  #
##############################################################

# All files
[*]
indent_style = space
charset = utf-8-bom
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true

# JSON files
[*.json]
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Python files
[*.py]
indent_size = 4
max_line_length = {{.line_length}}
